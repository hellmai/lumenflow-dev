{
  "name": "@lumenflow/core",
  "version": "0.0.0",
  "description": "Core WU lifecycle tools for LumenFlow workflow framework",
  "keywords": [
    "lumenflow",
    "workflow",
    "wu",
    "work-unit",
    "tdd",
    "devops"
  ],
  "homepage": "https://github.com/hellmai/os",
  "repository": {
    "type": "git",
    "url": "https://github.com/hellmai/os.git",
    "directory": "packages/@lumenflow/core"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "HellmAI",
    "url": "https://hellm.ai"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./git": {
      "types": "./dist/git/index.d.ts",
      "import": "./dist/git/index.js"
    },
    "./gates": {
      "types": "./dist/gates/index.d.ts",
      "import": "./dist/gates/index.js"
    },
    "./guards": {
      "types": "./dist/guards/index.d.ts",
      "import": "./dist/guards/index.js"
    },
    "./spawn": {
      "types": "./dist/spawn/index.d.ts",
      "import": "./dist/spawn/index.js"
    },
    "./state": {
      "types": "./dist/state/index.d.ts",
      "import": "./dist/state/index.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --max-warnings 0",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "minimatch": "^10.1.1",
    "simple-git": "^3.30.0",
    "zod": "^3.25.0"
