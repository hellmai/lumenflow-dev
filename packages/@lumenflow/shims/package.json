{
  "name": "@lumenflow/shims",
  "version": "3.6.2",
  "description": "Git and pnpm safety shims for LumenFlow worktree discipline",
  "keywords": [
    "lumenflow",
    "git",
    "pnpm",
    "shim",
    "worktree",
    "safety"
  ],
  "homepage": "https://github.com/hellmai/lumenflow-dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/hellmai/lumenflow-dev.git",
    "directory": "packages/@lumenflow/shims"
  },
  "license": "AGPL-3.0-only",
  "author": {
    "name": "HellmAI",
    "url": "https://hellm.ai"
  },
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./git": {
      "types": "./dist/git-shim.d.ts",
      "import": "./dist/git-shim.js"
    },
    "./pnpm": {
      "types": "./dist/pnpm-shim.d.ts",
      "import": "./dist/pnpm-shim.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "lumenflow-git": "./dist/git-shim.js",
    "lumenflow-pnpm": "./dist/pnpm-shim.js"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "build:dist": "tsc -p tsconfig.build.json",
    "pack:dist": "pnpm pack",
    "clean": "rm -rf dist *.tgz",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --max-warnings 0",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@lumenflow/core": "workspace:*",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.18",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=22"
  },
  "publishConfig": {
    "access": "public"
  }
}
