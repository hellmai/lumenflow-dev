{
  "name": "@lumenflow/mcp",
  "version": "3.6.5",
  "description": "MCP stdio server for LumenFlow workflow framework",
  "keywords": [
    "lumenflow",
    "mcp",
    "model-context-protocol",
    "workflow",
    "wu",
    "work-unit"
  ],
  "homepage": "https://github.com/hellmai/lumenflow-dev",
  "repository": {
    "type": "git",
    "url": "https://github.com/hellmai/lumenflow-dev.git",
    "directory": "packages/@lumenflow/mcp"
  },
  "license": "AGPL-3.0-only",
  "author": {
    "name": "HellmAI",
    "url": "https://hellm.ai"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js"
    },
    "./tools": {
      "types": "./dist/tools.d.ts",
      "import": "./dist/tools.js"
    },
    "./cli-runner": {
      "types": "./dist/cli-runner.d.ts",
      "import": "./dist/cli-runner.js"
    }
  },
  "bin": {
    "lumenflow-mcp": "./dist/bin.js"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "build:dist": "tsc -p tsconfig.json",
    "pack:dist": "pnpm pack",
    "clean": "rm -rf dist *.tgz",
    "test": "vitest run",
    "lint": "eslint src --quiet --rule no-console:off --rule @typescript-eslint/no-unused-vars:off --rule sonarjs/concise-regex:off",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@lumenflow/core": "workspace:*",
    "@lumenflow/kernel": "workspace:*",
    "@lumenflow/memory": "workspace:*",
    "@lumenflow/metrics": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^4.0.18",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=22"
  },
  "publishConfig": {
    "access": "public"
  }
}
