name: LumenFlow CI

on:
  pull_request:
  push:
    branches:
      - main

jobs:
  enforcement:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Setup pnpm
        uses: pnpm/action-setup@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: 22
          cache: 'pnpm'

      - name: Install dependencies
        run: pnpm install --frozen-lockfile

      - name: LumenFlow enforcement check
        run: pnpm lumenflow:pre-commit-check --ci
