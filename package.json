    "plan:create": "node tools/cli-entry.mjs plan-create",
    "plan:edit": "node tools/cli-entry.mjs plan-edit",
    "plan:link": "node tools/cli-entry.mjs plan-link",
    "plan:promote": "node tools/cli-entry.mjs plan-promote",
    "orchestrate:initiative": "node packages/@lumenflow/cli/dist/orchestrate-initiative.js",
    "orchestrate:init-status": "node packages/@lumenflow/cli/dist/orchestrate-init-status.js",
    "orchestrate:monitor": "node packages/@lumenflow/cli/dist/orchestrate-monitor.js",
    "delegation:list": "node packages/@lumenflow/cli/dist/delegation-list.js",
    "flow:report": "node packages/@lumenflow/cli/dist/flow-report.js",
    "strict:progress": "node packages/@lumenflow/cli/dist/strict-progress.js",
    "flow:bottlenecks": "node packages/@lumenflow/cli/dist/flow-bottlenecks.js",
    "metrics:snapshot": "node packages/@lumenflow/cli/dist/metrics-snapshot.js",
    "initiative:bulk-assign": "node packages/@lumenflow/cli/dist/initiative-bulk-assign-wus.js",
    "agent:issues-query": "node packages/@lumenflow/cli/dist/agent-issues-query.js",
    "lumenflow:init": "node packages/@lumenflow/cli/dist/init.js",
    "lumenflow:integrate": "node packages/@lumenflow/cli/dist/commands/integrate.js",
    "lumenflow:upgrade": "node packages/@lumenflow/cli/dist/lumenflow-upgrade.js",
    "lumenflow:doctor": "node packages/@lumenflow/cli/dist/doctor.js",
    "docs:sync": "node packages/@lumenflow/cli/dist/docs-sync.js",
    "sync:templates": "node packages/@lumenflow/cli/dist/sync-templates.js",
    "templates:sync": "node packages/@lumenflow/cli/dist/sync-templates.js",
    "docs:generate": "npx tsx tools/generate-cli-docs.ts",
    "docs:validate": "npx tsx tools/generate-cli-docs.ts --validate",
