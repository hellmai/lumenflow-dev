{
  "name": "hellmai-os",
  "private": true,
  "description": "HellmAI Operating System: LumenFlow workflow framework",
  "packageManager": "pnpm@10.28.1",
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "setup": "pnpm install && turbo build --filter=@lumenflow/cli && node packages/@lumenflow/cli/dist/commands/integrate.js --client claude-code 2>/dev/null || true",
    "bootstrap": "turbo build --filter=@lumenflow/cli",
    "build": "turbo build",
    "build:dist": "turbo build:dist",
    "dev": "turbo dev",
    "test": "turbo test",
    "verify:workspace-scripts": "node tools/verify-workspace-scripts.mjs",
    "lint": "pnpm verify:workspace-scripts && turbo lint",
    "typecheck": "pnpm verify:workspace-scripts && turbo typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "pack:all": "turbo pack:dist",
    "clean": "turbo clean && rm -rf node_modules/.cache",
    "gates": "node tools/cli-entry.mjs gates",
    "wu:claim": "node tools/cli-entry.mjs wu-claim",
    "wu:done": "node tools/cli-entry.mjs wu-done",
    "wu:prep": "node tools/cli-entry.mjs wu-prep",
    "wu:create": "node packages/@lumenflow/cli/dist/wu-create.js",
    "wu:edit": "node tools/cli-entry.mjs wu-edit",
