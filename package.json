    "wu:brief": "node tools/cli-entry.mjs wu-brief",
    "wu:delegate": "node packages/@lumenflow/cli/dist/wu-delegate.js",
    "wu:preflight": "node packages/@lumenflow/cli/dist/wu-preflight.js",
    "wu:repair": "node tools/cli-entry.mjs wu-repair",
    "wu:prune": "node packages/@lumenflow/cli/dist/wu-prune.js",
