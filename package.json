{
  "name": "hellmai-os",
  "private": true,
  "description": "HellmAI Operating System: LumenFlow workflow framework",
  "packageManager": "pnpm@9.15.0",
  "type": "module",
  "scripts": {
    "setup": "pnpm install && turbo build --filter=@lumenflow/cli",
    "build": "turbo build",
    "build:dist": "turbo build:dist",
    "dev": "turbo dev",
    "test": "turbo test",
    "lint": "turbo lint",
    "typecheck": "turbo typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "pack:all": "turbo pack:dist",
    "clean": "turbo clean && rm -rf node_modules/.cache",
    "gates": "node packages/@lumenflow/cli/dist/gates.js",
    "wu:claim": "node packages/@lumenflow/cli/dist/wu-claim.js",
    "wu:done": "node packages/@lumenflow/cli/dist/wu-done.js",
    "wu:create": "node packages/@lumenflow/cli/dist/wu-create.js",
    "wu:edit": "node packages/@lumenflow/cli/dist/wu-edit.js",
    "wu:block": "node packages/@lumenflow/cli/dist/wu-block.js",
    "wu:unblock": "node packages/@lumenflow/cli/dist/wu-unblock.js",
    "wu:validate": "node packages/@lumenflow/cli/dist/wu-validate.js",
    "spec:linter": "node packages/@lumenflow/cli/dist/wu-validate.js --all",
    "prompts:lint": "echo 'prompts:lint: no prompt files to lint (stub)' && exit 0",
    "cos:gates": "echo 'cos:gates: COS governance not configured (stub)' && exit 0",
    "mem:init": "node packages/@lumenflow/cli/dist/mem-init.js",
    "mem:checkpoint": "node packages/@lumenflow/cli/dist/mem-checkpoint.js"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.0",
    "eslint": "^9.18.0",
    "eslint-plugin-boundaries": "^5.3.1",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "prettier": "3.8.0",
    "turbo": "^2.7.4",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.28.0",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=22"
  }
}
